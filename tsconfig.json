{
  "compilerOptions": {
    "noImplicitAny": true,
    "baseUrl": "./src",
    "strictNullChecks": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "paths": {
      "utils/*": [ "utils/*" ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
